<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="background" fitHeight="400.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
      <AnchorPane layoutY="340.0" prefHeight="60.0" prefWidth="500.0" style="-fx-background-color: LightGray;">
         <children>
            <Button fx:id="start_btn" focusTraversable="false" layoutX="4.0" layoutY="2.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="150.0" text="Start">
               <font>
                  <Font size="28.0" />
               </font></Button>
            <Button fx:id="stop_btn" focusTraversable="false" layoutX="350.0" layoutY="2.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="150.0" text="Stop">
               <font>
                  <Font size="28.0" />
               </font></Button>
            <Button fx:id="pause_btn" focusTraversable="false" layoutX="175.0" layoutY="2.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="150.0" text="pause" >
               <font>
                  <Font size="28.0" />
               </font>
            </Button>
         </children></AnchorPane>
      <Text fx:id="flow_time" fill="WHITE" layoutX="34.0" layoutY="212.0" stroke="BLACK" strokeLineCap="BUTT" strokeType="OUTSIDE" strokeWidth="3.0" text="00 : 00 : 00" textAlignment="CENTER" wrappingWidth="433.0">
         <font>
            <Font size="72.0" />
         </font>
         <effect>
            <Glow level="0.8" />
         </effect>
      </Text>
   </children>
</AnchorPane>
